    <Spinner
        android:id="@+id/spinnerOperations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/operations" />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate" />

